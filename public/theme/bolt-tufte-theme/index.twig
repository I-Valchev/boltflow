{% extends '_base.twig' %}

{% set indexfile %}{% include 'content/index.json' %}{% endset %}
{% set index = indexfile|json_decode %}
{% set slug = app.request.get('slug')|default('introduction') %}
{% set title = index[slug] %}
{% set body %}{% include 'content/' ~ slug ~ '.md' %}{% endset %}

{% block title %}
  {{ title }}
{% endblock %}

{% block content %}
    {{ body|markdown }}
{% endblock content %}